<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    tools:context=".mainActivity">
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
        <RelativeLayout
            android:id="@+id/fullscreen_content_controls_main"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:focusable="auto"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/pfeil_links"
                style="?metaButtonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="350dp"
                android:layout_marginLeft="2dp"
                android:alpha="1"
                android:drawableRight="@drawable/ic_arrow_back_black_24dp" />

            <Button
                android:id="@+id/pfeil_rechts"
                style="?metaButtonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="350dp"
                android:layout_marginLeft="142dp"
                android:alpha="1"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp" />

            <Button
                android:id="@+id/pfeil_oben"
                style="?metaButtonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="300dp"
                android:layout_marginLeft="70dp"
                android:drawableTop="@drawable/ic_arrow_upward_black_24dp" />

            <Button
                android:id="@+id/pfeil_unten"
                style="?metaButtonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="350dp"
                android:layout_marginLeft="70dp"
                android:drawableBottom="@drawable/ic_arrow_downward_black_24dp" />

            <Button
                android:id="@+id/action"
                style="?metaButtonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="300dp"
                android:layout_marginLeft="600dp"
                android:drawableBottom="@drawable/ic_star_black_24dp" />

        </RelativeLayout>
</FrameLayout>